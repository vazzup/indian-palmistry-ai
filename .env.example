# Database Configuration
# For production: Use Supabase PostgreSQL URL
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/database
# For development: Use SQLite
DATABASE_URL=sqlite+aiosqlite:///./dev.db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration (Background Jobs)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Security Configuration
SECRET_KEY=change-this-to-a-secure-secret-key-in-production
JWT_SECRET=change-this-to-a-secure-jwt-secret-in-production

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000

# File Storage Configuration
FILE_STORAGE_ROOT=./data/images

# Application Configuration
DEBUG=true
LOG_LEVEL=INFO

# Session Configuration
SESSION_EXPIRE_SECONDS=604800
SESSION_COOKIE_NAME=palmistry_session
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAMESITE=Lax

# Development Settings
ENVIRONMENT=development